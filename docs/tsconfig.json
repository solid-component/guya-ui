{
    "compilerOptions": {
      "target": "ESNext",
      "module": "ESNext",
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "moduleResolution": "node",
      "jsx": "preserve",
      "jsxImportSource": "solid-js",
      "types": ["vite/client"],
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"] // 将 @ 映射到 src 目录下的文件  
      }
    }
  }
  